@model Entities.Models.Gifts
@{
    ViewData["Title"] = "Create";
}
<h1>Tilføj en gave</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Home" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BoyGift" class="control-label"></label>
                <input asp-for="BoyGift" class="form-control" />
                <span asp-validation-for="BoyGift" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GirlGift" class="control-label"></label>
                <input asp-for="GirlGift" class="form-control" />
                <span asp-validation-for="GirlGift" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Gem Gaven" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Tilbage til gaverne</a>
</div>